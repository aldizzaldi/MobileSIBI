<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textSize="28dp"
        android:text="PILIH SALAH SATU"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_alat"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alat_kecil_1"/>

        <ImageButton
            android:layout_marginStart="1dp"
            android:id="@+id/btn_tanpa_alat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tanpa_alat_kecil"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="44dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menggunakan Alat"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginStart="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanpa Menggunakan Alat"
            android:textStyle="bold"/>


    </LinearLayout>


</LinearLayout>